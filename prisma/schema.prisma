generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  image       String
  likes       Int       @default(0)

  tags        PostTag[]

  createdById Int?
  createdBy   User?     @relation("UserPosts", fields: [createdById], references: [id])

  likedBy     PostLike[]
}

model Tag {
  id     Int      @id @default(autoincrement())
  name   String   @unique

  posts  PostTag[]
}

model PostTag {
  id     Int  @id @default(autoincrement())
  post   Post @relation(fields: [postId], references: [id])
  postId Int
  tag    Tag  @relation(fields: [tagId], references: [id])
  tagId  Int

  @@unique([postId, tagId])
}

model User {
  id         Int        @id @default(autoincrement())
  firstName  String
  secondName String
  email      String     @unique
  avatar     String    @unique
  password   String
  isAdmin    Boolean    @default(false)

  createdPosts Post[]   @relation("UserPosts")

  likedPosts   PostLike[]
}

model PostLike {
  userId Int
  postId Int

  user   User @relation(fields: [userId], references: [id])
  post   Post @relation(fields: [postId], references: [id])

  @@id([userId, postId])
}